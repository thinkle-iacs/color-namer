{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../src/lib/types"]
    }
  },
  "include": ["**/*.js"]
}
